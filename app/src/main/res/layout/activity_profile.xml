<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:src="@drawable/resized"
            android:layout_centerHorizontal="true"
            app:civ_border_width="9dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/user_name_label"
                android:hint = "Name : "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:layout_toRightOf="@id/user_name_label"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/user_name"
                android:hint = "Sarvesh Ashok Relekar"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/email_label"
                android:hint = "Email : "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:layout_toRightOf="@id/email_label"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/email"
                android:hint = "sar265278@gmail.com"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/type_label"
                android:hint = "Type : "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_toRightOf="@id/type_label"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/type"
                android:hint = "Admin"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/user_zone_label"
                android:hint = "Zone : "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:layout_toRightOf="@id/user_zone_label"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/zone"
                android:hint = "North"/>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>